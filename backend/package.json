{
  "name": "nannotes-backend",
  "version": "1.0.0",
  "description": "Backend API for NANNOTES educational productivity platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server-simple.js",
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "dev-simple": "nodemon src/server-simple.ts",
    "dev-full": "nodemon src/server.ts",
    "dev-js": "node simple-test-server.js",
    "postinstall": "npm run build",
    "test": "jest --runInBand",
    "migrate": "node scripts/migrate-data.js",
    "seed": "node scripts/seed.js",
    "test:integration:mongo": "jest --runInBand tests/integration.server.test.js",
    "smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\smoke-test.ps1",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\""
  },
  "dependencies": {
    "@sentry/node": "^7.120.4",
    "@sentry/tracing": "^7.120.4",
    "aws-sdk": "^2.1498.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.2.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  },
  "keywords": [
    "education",
    "productivity",
    "notes",
    "pdf",
    "whiteboard"
  ],
  "author": "NANNOTES Team",
  "license": "MIT"
}
